<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.pe.thinhhoang.aaosync.FirstConfigFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_bk"
            android:layout_gravity="center"
            android:contentDescription="Logo BK" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trường ĐH Bách Khoa Tp.HCM"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mssvEditText"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textAlignment="center"
            android:singleLine="true"
            android:hint="Nhập MSSV"
            android:imeOptions="actionNext"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG NHẬP"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/brightText"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="12dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:clickable="true" />

    </LinearLayout>

</RelativeLayout>
