<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Cơ học vật rắn &amp; sóng cơ"
            android:id="@+id/TenMH"
            android:textColor="@color/colorPrimary"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/doneMark"
            android:layout_toEndOf="@+id/doneMark"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doneMark"
            android:src="@drawable/ic_done_black_24dp"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3 tín chỉ/ĐVHP"
            android:id="@+id/SoTC"
            android:textColor="@color/textLight"
            android:layout_below="@+id/doneMark"
            android:layout_alignLeft="@+id/TenMH"
            android:layout_alignStart="@+id/TenMH"
            android:fontFamily="sans-serif-light" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="9.0"
            android:id="@+id/DiemKT"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="@color/textLight"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/DiemThi"
            android:layout_toStartOf="@+id/DiemThi"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="10.0"
            android:id="@+id/DiemThi"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/textLight"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/DiemTK"
            android:layout_toStartOf="@+id/DiemTK"
            android:layout_marginRight="8dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="10.0"
            android:id="@+id/DiemTK"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:background="@color/red"
            android:textColor="@color/brightText"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

</RelativeLayout>
