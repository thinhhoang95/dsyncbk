<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/Phong"
        android:layout_toStartOf="@+id/Phong"
        android:layout_marginRight="16dp">

        <TextView android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:fontFamily="sans-serif-light"
            android:text="Nhiệt động học thống kê"
            android:id="@+id/TenMH"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/pink"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/playingIcon"
            android:layout_toEndOf="@+id/playingIcon"
            android:layout_marginLeft="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TenMH"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/TenMH"
            android:layout_alignStart="@+id/TenMH"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:id="@+id/GioBatDau"
                android:layout_below="@+id/TenMH"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <hu.pe.thinhhoang.aaosync.utils.ClassIndicatorView
                android:layout_width="56dp"
                android:layout_height="10dp"
                android:id="@+id/classIndicator"
                android:layout_toRightOf="@+id/GioBatDau"
                android:layout_toEndOf="@+id/GioBatDau"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignBottom="@+id/GioBatDau" />

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="14:55"
                android:id="@+id/GioKetThuc"
                android:layout_alignParentBottom="false"
                android:layout_toRightOf="@+id/classIndicator"
                android:layout_toEndOf="@+id/classIndicator"
                android:layout_below="@+id/TenMH" />
        </LinearLayout>

        <TextView
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="-4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/playingIcon"
            android:text="▶"
            android:textColor="@color/pink"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="materials-icon"
            android:textSize="13dp"
            android:visibility="visible" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="206B10"
        android:fontFamily="sans-serif-light"
        android:id="@+id/Phong"
        android:textColor="@color/green" />

</RelativeLayout>